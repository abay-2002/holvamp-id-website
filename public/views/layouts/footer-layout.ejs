<!--============================
=            Footer            =
=============================-->
<footer>
    <div class="footer-main">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-12 m-md-auto align-self-center">
            <div class="block">
              <a href="<%= holvamp_icon_alt.to %>"><img src="/images/img/logo/<%= holvamp_icon_alt.icon %>" alt="<%= holvamp_icon_alt.icon_alt %>"></a>
              <!-- Social Site Icons -->
              <ul class="social-icon list-inline">
                <% socials_media.forEach(social_media => { %>
                    <li class="list-inline-item">
                      <a href="<%= social_media.to %>" target="blank"><i class="<%= social_media.b_icon %>"></i></a>
                    </li>
                <% }) %>
              </ul>
            </div>
          </div>
          <!-- Product -->
          <div class="col-lg-2 col-md-3 col-6 mt-5 mt-lg-0">
            <div class="block-2">
              <!-- heading -->
              <h6>Produk</h6>
              <!-- links -->
              <ul>
                <% products.forEach(product => { %>
                  <li><a href="<%= product.to %>" target="blank"><%= product.page %></a></li>                 
                <% }) %>
              </ul>
            </div>
          </div>
          <!-- Social -->
          <div class="col-lg-2 col-md-3 col-6 mt-5 mt-lg-0">
            <div class="block-2">
              <!-- heading -->
              <h6>Komunitas</h6>
              <!-- links -->
              <ul>
                <% socials_media.forEach(social_media => { %>
                    <li><a href="<%= social_media.to %>" target="blank"><%= social_media.page %> </a></li>
                <% }) %>
              </ul>
            </div>
          </div>
          <!-- Company -->
          <div class="col-lg-2 col-md-3 col-6 mt-5 mt-lg-0">
            <div class="block-2">
              <!-- heading -->
              <h6>Perusahaan</h6>
              <!-- links -->
              <ul>
                <% pages.forEach(page => { %>
                  <li><a href="<%= page.to %>"><%= page.page_title%> </a></li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Mailchimp -->
    <%- include('mailchimp-layout') %>
    <div class="text-center bg-dark py-4">
      <small class="text-secondary">Copyright &copy; <script>document.write(new Date().getFullYear())</script> <a href="<%= holvamp_icon_alt.to %>" target="blank"><%= holvamp_icon_alt.icon_title %></a>.</small class="text-secondary">
        <br>
      <small class="text-secondary">Dibuat dengan ❤️ oleh: <a href="<%= author.to %>" target="blank"> <%= author.name %></a>.</small class="text-secondary">
    </div>
  </footer>
