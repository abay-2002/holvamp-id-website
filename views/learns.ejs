<body class="body-wrapper" data-spy="scroll" data-target=".privacy-nav">
    <!-- Navbar -->
    <%- include('layouts/navbar-layout') %>
    <!-- End of Navbar -->
    <!--================================
    =            Page Title            =
    =================================-->
      <section class="section page-title">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 m-auto">
              <!-- Page Title -->
              <h1>Holvamp Belajar</h1>
              <!-- Page Description -->
              <p class="text-muted"> 
                Nikmati berbagai bidang pelajaran gratis dari Holvamp
              </p>
              <p class="blockquote mt-2 text-muted"> 
                Mau belajar apa hari ini?
              </p>
              <small class="text-muted"></small>
            </div>
          </div>
        </div>
      </section>
      <!--====  End of Page Title  ====-->
      <section class="post-grid section pt-0">
      <div class="container">
        <div class="row">
            <% learns.forEach(learn => { %>
                <div class="col-lg-4 col-md-4 col-sm-6">
                  <article class="post-sm">
                    <!-- Post Image -->
                    <div class="post-thumb">
                      <a href="<%= learn.to %>"><img class="w-100" src="/images/learns/<%= learn.img %>" alt="<%= learn.img %>"></a>		
                    </div>
                    <!-- Post Title -->
                    <div class="post-title">
                      <h3 style="font-weight: 500;"><a href="<%= learn.to %>"><%= learn.title %></a></h3>
                    </div>
                    <!-- Post Meta -->
                    <li class="list-inline-item">
                      <a href="<%= learn.to %>"><cite>Oleh: <%= learn.author %></cite></a>
                    </li>
                    <div class="post-meta">
                      <ul class="list-inline post-tag">
                        <!-- <li class="list-inline-item">
                          <img src="" alt="author-thumb">
                        </li> -->
                      </ul>
                    </div>
                    <!-- Post Details -->
                    <div class="post-details">
                      <p style="color: #808080;">
                        <%= learn.desc %> 
                      </p>
                    </div>
                  </article>
                </div>
            <% }) %>
        </div>
      </div>
    </section>
    <!-- JOIN-US -->
    <%- include('layouts/join-us-layout') %>
    <!--=====================================
    =            Footer			            =
    ======================================-->
    <%- include('layouts/footer-layout') %>
    <!--====  End of Footer  ====-->                                                                                                            