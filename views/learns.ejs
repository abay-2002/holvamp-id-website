  // const text_total = document.getElementsByClassName('learn-topic-text');
  const text_learn_topic = document.getElementsByClassName('learn-topic-text');
  for(i = 0; i < text_learn_topic.length; i++){
    const element_string = text_learn_topic[i].innerHTML;
    text_learn_topic[i].innerHTML = element_string.replaceAll('-', ' ');
  }
</script>