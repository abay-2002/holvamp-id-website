<body class="body-wrapper" data-spy="scroll" data-target=".privacy-nav">
<% const blogs = blog_resource[0] %>
<!-- Navbar -->
<%- include('layouts/navbar-layout') %>
<!-- End of Navbar -->
<!--================================
=            Page Title            =
=================================-->
  <section class="section page-title">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 m-auto">
          <!-- Page Title -->
          <h1><%= blogs.name %></h1>
          <!-- Page Description -->
          <p> 
            <%= blogs.description %>
          </p>
          <p class="blockquote mt-2"> 
            Mau belajar apa hari ini?
          </p>
          <small class="text-muted">Terakhir disunting pada: <%= new Date(blogs.updated).toISOString().split('T')[0] %> </small>
        </div>
      </div>
    </div>
  </section>
  <!--====  End of Page Title  ====-->
  <% const holvamp_courses = courses %> 
  <section class="post-grid section pt-0">
  <div class="container">
    <div class="row">
      <% holvamp_courses.forEach(course => { %>
        <div class="col-lg-4 col-md-4 col-sm-6">
          <article class="post-sm">
            <!-- Post Image -->
            <div class="post-thumb">
              <a href="/blogs/<%= course.to %>"><img class="w-100" src="<%= course.image_course %>" alt="<%= course.course %> "></a>		
            </div>
            <!-- Post Title -->
            <div class="post-title">
              <h3 style="font-weight: 500;"><a href="/blogs/<%= course.to %>">Belajar <%= course.course %></a></h3>
            </div>
            <!-- Post Meta -->
            <li class="list-inline-item">
              <a href="/blogs/<%= course.to %>"><cite>Oleh: <%= course.by %></cite></a>
            </li>
            <div class="post-meta">
              <ul class="list-inline post-tag">
                <!-- <li class="list-inline-item">
                  <img src="" alt="author-thumb">
                </li> -->
              </ul>
            </div>
            <!-- Post Details -->
            <div class="post-details">
              <p style="color: #808080;">
                <%= course.desc %> 
              </p>
            </div>
          </article>
        </div>
      <% }) %>
      
    </div>
  </div>
</section>
<!-- JOIN-US -->
<%- include('layouts/join-us-layout') %>
<!--=====================================
=            Footer			            =
======================================-->
<%- include('layouts/footer-layout') %>
