<% const holvamp_datas = holvamp_api %> <!-- Holvamp's API-->
<% blogger_data = posts.items %> <!-- Blogger API V3-->
<% label = course %> <!-- req.params -->
<body class="body-wrapper" data-spy="scroll" data-target=".privacy-nav">
    <!-- Navbar -->
    <%- include('layouts/navbar-layout') %>
    <!-- End of Navbar -->
    <!--================================
    =            Page Title            =
    =================================-->
      <section class="section page-title">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 m-auto">
              <!-- Page Title -->
              


              <!-- Page Description -->
              <p> 
                <!--  -->
              </p>
              <!-- date here -->
            </div>
          </div>
        </div>
      </section>
      <!--====  End of Page Title  ====-->
      <section class="post-grid section pt-0">
      <div class="container">
        <div class="row">
            <% blogger_data.forEach(post => { %>
              <div class="col-lg-4 col-md-4 col-sm-6">
                <article class="post-sm">
                  <!-- Post Image -->
                  <div class="post-thumb">
                    <a href="/blogs/<%= post.labels %>/<%= post.id %>"><img class="w-100" src="/images/blog/" alt="Post-Image"></a>		
                  </div>
                  <!-- Post Title -->
                  <div class="post-title">
                    <h3 style="font-weight: 400;"><a href="/blogs/<%= post.labels %>/<%= post.id %>"><%= post.title %></a></h3>
                  </div>
                  <!-- Post Meta -->
                  <div class="post-meta">
                    <ul class="list-inline post-tag">
                      <li class="list-inline-item">
                        <img src="<%= post.author.image.url %>" alt="author-thumb">
                      </li>
                      <li class="list-inline-item">
                        <a href="/blogs/<%= post.labels %>/<%= post.id %>"><%= post.author.displayName %></a>
                      </li>
                      <li class="list-inline-item text-muted">
                        Disunting pada: %> <%= new Date(post.updated).toISOString().split('T')[0] %>
                      </li>
                    </ul>
                  </div>
                  <!-- <div class="post-details">
                  </div> -->
                </article>
              </div>
            <% }) %>
        </div>
      </div>
    </section>
    <!-- JOIN-US -->
    <%- include('layouts/join-us-layout') %>
    <!--=====================================
    =            Footer			            =
    ======================================-->
    <%- include('layouts/footer-layout') %>
